{
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist", "devapp-build"],
  "compilerOptions": {
    "baseUrl": "src",
    "moduleResolution": "node",
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "allowJs": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "jsx": "react",
    "declaration": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "rootDirs": ["./src"]
  }
}
